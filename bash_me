export INSTALLED=$HOME/Installed
export WORKSPACE=$HOME/Workspace
export PATH=$PATH:$INSTALLED/bin

# flutter/dart settings
export PATH=$PATH:$INSTALLED/flutter_sdk/bin
export PATH=$PATH:$HOME/.pub-cache/bin
export PATH=$PATH:$HOME/Installed/flutter_sdk/.pub-cache/bin

# gradle setting
export GRADLE_HOME=$INSTALLED/gradle-5.1.1
export PATH=$PATH:$GRADLE_HOME/bin

# maven settings
export M2_HOME=$INSTALLED/apache-maven-3.6.0
export M2=$M2_HOME/bin
export PATH=$PATH:$M2_HOME/bin

# cassandra bin directory
export PATH=$PATH:$INSTALLED/apache-cassandra-3.11.6/bin

# mysql bin directory
export PATH=$PATH:$INSTALLED/mysql-8.0.13/bin

# android sdk
export ANDROID_HOME=$INSTALLED/android-sdk
#export PATH=$PATH:$INSTALLED/android-sdk/bin
#export ANDROID_SDK_ROOT=$INSTALLED/android-sdk

# golang sdk
export GOROOT=$INSTALLED/golang_sdk
export PATH=$PATH:$GOROOT/bin

# git command alias
alias gaa='git add --all'
alias gad='git add '
alias gba='git branch -a'
alias gbr='git branch'
alias gch='git checkout'
alias gcl='git clone --recurse-submodules'
alias gcm='git commit'
alias gdf='git diff'
alias glg='git log --stat'
alias gls='git log --oneline'
alias gpl='git pull --rebase'
alias gps='git push'
alias gpsd='git push --dry-run'
alias gst='git status'

# docker command alias
alias dbl='docker build'
alias dcn='docker container'
alias dcrm='docker container rm'
alias dim='docker image'
alias dkl='docker kill'
alias dlo='docker logs'
alias dls='docker image ls && docker container ls -a'
alias dps='docker ps -a'
alias drn='docker run'
alias drnd='docker run --detach'
alias dsp='docker stop'
alias dst='docker start'

# kubernetes
alias ktl='kubectl'
alias kap='ktl apply'
alias kcg='ktl config'
alias kcgc='ktl config get-contexts'
alias kcuc='ktl config use-context'
alias kdl='ktl delete'
alias kds='ktl describe'
alias kex='ktl exec -it'
alias kgt='kubectl get'
alias kls='ktl get all'
alias klsw='ktl get all -o wide'
alias klg='kubectl logs -f'

# youtube
alias ydl=youtube-dl
alias ydlb=ydl -f best
alias ydlo='ydl -f 137+140'
alias ydls='ydl -f 136+140'
alias ydlf='ydl -f 135+140'
alias ydlst='for link in $(cat ~/ydlist); do ydls $link; done;'

# command alias
alias bat='cat -n'
alias la='ls -lhA'
alias lf='ls -lh *'
alias ll='ls -lh'
alias pj='ps -ef | grep java'
alias pq='ps -ef | grep'
alias rf='rm -rf'
alias watch='watch -t -n 1'
